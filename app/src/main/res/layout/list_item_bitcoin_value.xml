<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/colorAccent">

    <TextView
        android:id="@+id/tvNameOfMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/month_of_value"
        android:textColor="@color/textGray"
        android:textSize="@dimen/text_size_half_medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivBitcoin"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="@dimen/layout_small_padding"
        android:src="@drawable/ic_bitcoin_gray"
        app:layout_constraintBottom_toBottomOf="@id/tvBitcoinRateValue"
        app:layout_constraintRight_toLeftOf="@id/tvBitcoinRateValue"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBitcoinRateValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/bitcoin_rate_example"
        android:textColor="@color/textGray"
        android:textSize="@dimen/text_size_half_medium"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>